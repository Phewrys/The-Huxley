import java.io.*;
import java.util.*;

public class HuxleyCode {
  public static void main(String args[]) {
    Scanner input = new Scanner(System.in);

    int x = input.nextInt();

    if(x >= 100 && x <= 999){
      int one = x/100;
      int two = x/10-one*10;
      int three = x-one*100-two*10;

      System.out.printf("%d%d%d", three, two, one);
    }
    else
      System.out.printf("O numero digitado nÃ£o tem 3 algarismos.\n");
  }
}
