import java.io.*;
import java.util.*;

public class HuxleyCode {
  public static void main(String args[]) {
    Scanner input = new Scanner(System.in);

    int x = input.nextInt();
    int y = input.nextInt();
    int resultado = x*y;

    if (resultado % 2 == 0)
      System.out.printf("%d%n", resultado/2);
    else
      System.out.printf("%d%n", (resultado-1)/2); 
  }
}
