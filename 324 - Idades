import java.io.*;
import java.util.*;

public class HuxleyCode {
  public static void main(String args[]) {
    Scanner input = new Scanner(System.in);

    int x = input.nextInt();
    double soma = 0;
    double count = 0;

    do{
      soma = soma + x;
      count = count+1;
      x = input.nextInt();
    }while(x >= 0);

    double media = soma / count;
    System.out.printf("%.2f\n", media);
  }
}
