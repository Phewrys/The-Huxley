import java.io.*;
import java.util.*;

public class HuxleyCode {
  public static void main(String args[]) {
    Scanner input = new Scanner(System.in);
    
    double video = input.nextDouble();
    double audio = input.nextDouble();
    double dados = input.nextDouble();
    double capacidade = input.nextDouble();

    double max = ((video*5.2) + (audio*3.4) + (dados*1.5))/capacidade;

    System.out.printf("%.2f%n", max);
  }
}
